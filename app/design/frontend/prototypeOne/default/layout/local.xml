<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<default>
		<!-- Adding jQuery -->
		<!-- $j =jQuery.noConflict(). This function is needed cause magento uses something familiar $! -->
		<reference name="head">			
			<action method="addItem">
				<type>skin_js</type>
				<name>js/jquery-2_1_0.js</name>				
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/flexSlider/flexslider.js</name>				
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/content/flexslide.js</name>				
			</action>
			<!-- Adding CSS -->			
			<action method="addCss">
				<stylesheet>css/header.css</stylesheet>
			</action>	
			<action method="addCss">
				<stylesheet>css/content.css</stylesheet>
			</action>	
			<action method="addCss">
				<stylesheet>css/footer.css</stylesheet>
			</action>
			<action method="addCss">
				<stylesheet>css/flexSlider/flexslider.css</stylesheet>
			</action>	
			<action method="addCss">
				<stylesheet>css/flexslider.css</stylesheet>
			</action>
			<action method="addCss">
				<stylesheet>css/category_products/category_products.css</stylesheet>
			</action>
			<action method="addCss">
				<stylesheet>css/category_product_specific/specific_product.css</stylesheet>
			</action>
			<action method="addCss">
				<stylesheet>css/cart/shopping_cart.css</stylesheet>
			</action>
			<action method="addCss">
				<stylesheet>css/checkout/checkout.css</stylesheet>
			</action>
		</reference>	
		
		<!-- An empty container, working with notices of some kind -->
		<remove name="global_notices"/>
		<!-- An empty container, working with notices of zip codes of some kind-->
		<remove name="optional_zip_countries"/>
		<!-- An empty container, working with notices of zip codes of some kind-->
		<remove name="js_cookies"/>¨
		<!-- Community poll, what is your favorite color -vote! -->
		<remove name="right.poll"/>¨
		<!-- Paypal image -->
		<remove name="paypal.partner.right.logo"/>
		<!-- An empty cookie container at bottom of whole page -->
		<remove name="global_cookie_notice"/>
		<!-- An empty container for enabling language choises -->
		
		<!-->
			<remove name="store_language"/>
		-->
		
		<!-- No need to have a welcome message container -->
		<remove name="welcome"/>		
		
			
	</default>
	
</layout>
